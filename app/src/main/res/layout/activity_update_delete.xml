<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.grofers.hamimraavi.todo.UpdateDeleteActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etuDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:ems="10"
                android:hint="Description"
                android:inputType="textMultiLine" />

            <Switch
                android:id="@+id/switchuDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/etuDescription"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Date" />

            <TextView
                android:id="@+id/tvuDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/switchuDate"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/switchuDate"
                android:text="New Text" />

            <Button
                android:id="@+id/buSetDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tvuDate"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:onClick="setDate"
                android:text="Set Date" />


            <Switch
                android:id="@+id/switchuTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/switchuDate"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Time" />


            <TextView
                android:id="@+id/tvuTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/switchuTime"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_toRightOf="@id/switchuTime"
                android:text="New Text" />

            <Button
                android:id="@+id/buSetTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/tvuTime"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_alignParentRight="true"
                android:onClick="setTime"
                android:text="Set Time" />

            <Switch
                android:id="@+id/switchuPending"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/switchuTime"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="Pending" />

            <Button
                android:id="@+id/buDeleteTask"
                android:text="Delete Task"
                android:background="#FF9999"
                android:layout_below="@id/switchuPending"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Button
                android:id="@+id/buUpdateTask"
                android:text="Update Task"
                android:layout_below="@id/switchuPending"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
